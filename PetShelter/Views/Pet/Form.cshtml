@inject LanguageService language
@model PetShelter.Models.Adoption

<div class="container">
    <div class="row">
        <div class="col">
            <div class="form">
                <form asp-action="Form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="PetId" />
                    <label>@language.GetKey("beforepet")?</label>
                    <input asp-for="BeforePet" class="form-control">
                    <span asp-validation-for="BeforePet" class="text-danger"></span>
                    <label>@language.GetKey("homepet")?</label>
                    <input asp-for="HomePet" class="form-control">
                    <span asp-validation-for="HomePet" class="text-danger"></span>
                    <label>@language.GetKey("adress")</label>
                    <input asp-for="Adress" class="form-control">
                    <span asp-validation-for="Adress" class="text-danger"></span>
                    <input type="submit" value="@language.GetKey("save")" class="btn btn-primary" style="margin-top:1rem" />
                </form>
            </div>

        </div>
    </div>
</div>

<style>
    body {
        position: relative;
        background-color: #000;
        margin-top:-20px;
        margin-bottom:0px;

    }

        body::before {
            content: ' ';
            display: block;
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            opacity: 0.5;
            background: url("http://article.murata.com/sites/default/files/static/ja-jp/images/article/iot-changes-life-with-pets/iot-changes-life-with-pets-main.jpg") no-repeat center center;
            background-size: cover;
        }
        .form {
            margin-top:40%;
            margin-bottom:11rem;
            width:350px;
            color:#fff;
        }
        .container {
            display: flex;
            align-items: center;
            justify-content: center;
        }
</style>