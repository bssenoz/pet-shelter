
@{
    ViewData["Title"] = "Animal";
}
@model IEnumerable<AnimalShelter.Models.Animal>

@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="text-align:center">
    <h1>ANIMALS</h1>
    <button type="button" class="btn btn-outline-success" style="float:right;margin-bottom:1rem">
        <a class="nav-link text-dark" asp-area="" asp-controller="Panel" asp-action="Create">New Animal</a>
    </button>
    <button type="button" class="btn btn-outline-success" style="float:right;margin-bottom:1rem">
        <a class="nav-link text-dark" asp-area="" asp-controller="Panel" asp-action="Adoption">İstekler</a>
    </button>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AnimalId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Familya)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Species)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AnimalId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Familya)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Species)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AnimalId">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.AnimalId">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>


