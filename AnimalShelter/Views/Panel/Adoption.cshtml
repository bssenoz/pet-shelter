
@{
    ViewData["Title"] = "Animal";
}
@model IEnumerable<AnimalShelter.Models.Adoption>

@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="text-align:center">
    <h1>Sahiplenme İstekler</h1>    <button type="button" class="btn btn-outline-success" style="float:right;margin-bottom:1rem">
        <a class="nav-link text-dark" asp-area="" asp-controller="Panel" asp-action="New">New Adoption</a>
    </button>
    <button type="button" class="btn btn-outline-success" style="float:right;margin-bottom:1rem">
        <a class="nav-link text-dark" asp-area="" asp-controller="Panel" asp-action="Create">New Animal</a>
    </button>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AnimalId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Situation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnimalId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Situation)
                    </td>
                    <td>
                        <a asp-controller="Panel" asp-action="Approve" asp-route-id="@item.Id">Approve</a>
                    </td>
                    <td>
                        <a asp-controller="Panel" asp-action="Reject" asp-route-id="@item.Id">Reject</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
